{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2015",
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "./src/global.d.ts"
        ],
        "removeComments": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}